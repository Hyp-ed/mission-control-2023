{
  "extends": "@tsconfig/node16-strictest-esm/tsconfig.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    // TODO Later: remove when all errors fixed
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  }
}